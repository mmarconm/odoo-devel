{
	"name": "Odoo 14",
	"dockerComposeFile": [
		"../docker-compose.yml"
	],
	"service": "odoo",
	"workspaceFolder": "/usr/lib/python3/dist-packages/odoo",
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python",
				"scapigliato.vsc-odoo-development",
				"redhat.vscode-xml",
				"mechatroner.rainbow-csv",
				"mstuttgart.odoo-snippets",
				"christian-kohler.path-intellisense",
				"esbenp.prettier-vscode"
			]
		}
	},

	"postCreateCommand": "mv /usr/lib/python3/dist-packages/odoo/extra-addons/.vscode .vscode"

}
